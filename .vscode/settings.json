{
  "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  "editor.fontSize": 13,
  "editor.fontWeight": "500",
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "500",
  "window.zoomLevel": 1,
  // Background theme
  // "workbench.colorTheme": "Turbo Potato Dark Contrast Italic",
  "terminal.integrated.env.windows": {},
  "background.enabled": true,
  "background.fullscreen": {
    "images": ["file:///C:/Users/ricar/Pictures/wallpapers/mountains.jpg"],
    "opacity": 0.88,
    "size": "cover",
    "position": "center",
    "interval": 0
  },
  "console-ninja.featureSet": "Community",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.profiles.windows": {
    "Git Bash": {
      "source": "Git Bash",
      "path": ["C:\\Program Files\\Git\\bin\\bash.exe"],
      "args": ["--login", "-i"]
    }
  },
  "terminal.integrated.cwd": "${workspaceFolder}",
  "editor.linkedEditing": true,
  "workbench.iconTheme": "material-icon-theme",
  "editor.bracketPairColorization.enabled": true,
  "explorer.confirmDelete": true,
  "explorer.openEditors.visible": 1,
  "terminal.integrated.scrollback": 10000,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.parameterHints.enabled": true,
  "editor.minimap.enabled": true,
  "editor.minimap.scale": 1,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 80,
  "breadcrumbs.enabled": true,
  "files.associations": {
    "*.html": "html",
    "*.djhtml": "html" // Add this if your Django HTML files have a different extension
  },
  "emmet.includeLanguages": {
    "html": "html",
    "django-html": "html"
  },
  "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 1000,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.createEnvironment.trigger": "off",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "foreground": "#6A9955" // Greenish color for comments
        }
      },
      {
        "scope": "keyword",
        "settings": {
          "foreground": "#569CD6" // Light blue color for keywords
        }
      },
      {
        "scope": "string",
        "settings": {
          "foreground": "#f88466" // orange color for strings
        }
      },
      {
        "scope": "entity.name.function",
        "settings": {
          "foreground": "#dcd0aa" // Yellow color for function names
        }
      },
      {
        "scope": "variable",
        "settings": {
          "foreground": "#9CDCFE" // Light blue color for variables
        }
      },
      {
        "scope": "constant.numeric",
        "settings": {
          "foreground": "#B5CEA8" // Light green color for numeric constants
        }
      },
      {
        "scope": "keyword.operator",
        "settings": {
          "foreground": "#C586C0" // Light purple color for operators
        }
      },
      {
        "scope": "entity.name.type.class",
        "settings": {
          "foreground": "#4EC9B0" // Light teal color for class names
        }
      },
      {
        "scope": "entity.other.attribute-name",
        "settings": {
          "foreground": "#9c9cfe" // Light blue color for attribute names
        }
      },
      {
        "scope": "meta.tag",
        "settings": {
          "foreground": "#569CD6" // Light blue color for tags
        }
      },
      {
        "scope": "constant.language",
        "settings": {
          "foreground": "#569CD6" // Light blue color for language constants
        }
      },
      {
        "scope": "text",
        "settings": {
          "foreground": "#D4D4D4" // Light gray color for default text
        }
      },
      {
        "scope": [
          "comment",
          "comment.block.documentation",
          "keyword",
          "keyword.control",
          "keyword.operator",
          "keyword.other",
          "storage",
          "storage.type",
          "storage.modifier"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "editor.fontVariations": false,
  "editor.stickyScroll.enabled": false,
  "terminal.integrated.localEchoStyle": "dim",
  // Disable auto-activation of virtual environments
  "python.terminal.activateEnvironment": false,
  "python.terminal.activateEnvInCurrentTerminal": false,
  "python.terminal.activateEnvironmentInCurrentTerminal": false,
  "python.terminal.integrated.shellIntegration.enabled": false
}
